---
const { variant = "primary", size = "large" } = Astro.props;

const buttonStyling =
  "text-[#ff1052] font-['neulis-sans'] font-medium uppercase border border-[#ff1052] rounded transition ease-in";

const variantClasses = {
  primary: "hover:bg-[#ff1052] hover:text-[#f5f6f8]",
  secondary: "hover:bg-[#ff1052] hover:text-[#f5f6f8]",
};

const sizeClasses = {
  small: "px-[16px] py-[8px] text-sm",
  large: "px-[21px] py-[10px] text-xl",
};
---

<button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}
  ><slot /></button
>
