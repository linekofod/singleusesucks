---
// Henter parametrene fra Astro.props
const {
  href = "#",
  target = "_self",
  variant = "textlink",
  size = "standard",
} = Astro.props;

const linkStyling = "font-['neulis-sans'] font-medium text-[#024058] w-fit";

const variantClasses = {
  textlink: "hover:text-[#02405899]",
};

const sizeClasses = {
  standard: "text-[22px]",
  small: "text-lg",
};
---

<a
  href={href}
  target={target}
  class:list={[linkStyling, variantClasses[variant], sizeClasses[size]]}
  ><slot /></a
>
