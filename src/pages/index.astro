        <!-- Wrapper-div med blå baggrund og lav opacitet -->
        <div class="w-full md:w-full lg:w-full bg-[#024058] bg-opacity-60 p-8 rounded-lg flex flex-col md:flex-row items-start relative">
          <!-- Tekstsektion i venstre side -->
