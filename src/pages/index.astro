---
import MainLayout from "../layouts/MainLayout.astro";
import "../styles/general.css";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import Banner from "../components/Banner.astro";
import { Image } from "astro:assets";
import digital_clean_up from "../assets/images/digital_clean_up.webp";
import internationalt_arbejde from "../assets/images/internationalt_arbejde.webp";
import klimaforandringer from "../assets/images/klimaforandringer.webp";
import merchandise_bg from "../assets/images/merchandise_bg.webp";
import mikroplast from "../assets/images/mikroplast.webp";
import politisk_arbejde from "../assets/images/politisk_arbejde.webp";
import skader_dyrelivet from "../assets/images/skader_dyrelivet.webp";
import skrald_strand from "../assets/images/skrald_strand.webp";
import sundhedsfare from "../assets/images/sundhedsfare.webp";
import ødelæggelse_af_levesteder from "../assets/images/ødelæggelse_af_levesteder.webp";
import engangsplast from "../assets/images/ikoner/emballage_rød-1.png";
import genbrug from "../assets/images/ikoner/genbrug_rød.png";
import mikroplast_ikon from "../assets/images/ikoner/mikroplast_rød.png";
import politik from "../assets/images/ikoner/politik_rød.png";
---

<MainLayout title="Plastic Change">
  <!-- <Image src={baggrund} alt="" /> -->
  <div
    class="flex items-center h-screen w-100 bg-cover bg-top sticky top-0"
    style="background-image: url('/src/assets/images/baggrund.webp')"
  >
    <h1>Plastik Change</h1>
  </div>

  <div
    class="flex flex-col items-center h-full w-100 bg-cover bg-top sticky top-0"
    style="background-image: url('/src/assets/images/mellemgrund2.webp')"
  >
    <!-- Hero unit -->
    <section class="h-screen w-100"></section>

    <!-- Plastikforurening? -->
    <section class="h-screen w-100"></section>

    <!-- Problemet -->
    <section class="h-screen w-100"></section>

    <!-- Gør en forskel -->
    <section id="gør-en-forskel" class="h-screen w-full">
      <Banner />
      <div class="flex justify-center items-center mt-16 mb-4">
        <h2 class="">Gør en forskel</h2>
      </div>

      <div
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 px-8 pt-16"
      >
        <!-- Engangsplast -->
        <div class="flex flex-col items-center p-6 text-center">
          <Image src={engangsplast} alt="kop" />
          <h3 class="mb-4 mt-10 h-16 flex items-center justify-center">
            Undgå engangsplast
          </h3>
          <p class="mt-4">
            Skift plastposer ud med stofposer og brug genanvendelige
            vandflasker, kaffekopper og madpakker. Engangsplast står for en stor
            del af plastikforureningen, da det kun bruges kortvarigt, men har en
            langvarig miljøpåvirkning.
          </p>
        </div>

        <!-- Sorter genbrug -->
        <div class="flex flex-col items-center p-6 text-center">
          <Image src={genbrug} alt="kop" />
          <h3 class="mb-4 mt-6 h-16 flex items-center justify-center">
            Sortér genbrug
          </h3>
          <p class="mt-4">
            Ved at sortere dit affald korrekt sikrer du, at plast kan
            genanvendes, og du mindsker mængden af plast, der ender i naturen
            eller på lossepladser. Støt også systemer, der fremmer genbrug.
          </p>
        </div>

        <!-- Begræns mikroplastik -->
        <div class="flex flex-col items-center p-6 text-center">
          <Image src={mikroplast_ikon} alt="kop" />
          <h3 class="mb-4 mt-10 h-16 flex items-center justify-center">
            Begræns mikroplastik
          </h3>
          <p class="mt-4">
            Vælg kosmetik- og plejeprodukter uden mikroplast, da disse små
            plastpartikler let ender i vores vandsystemer. Brug vaskeposer, som
            kan reducere spild af mikroplast fra syntetisk tøj, der frigøres
            under vask.
          </p>
        </div>

        <!-- Støt politisk handling -->
        <div class="flex flex-col items-center p-6 text-center">
          <Image src={politik} alt="kop" />

          <h3 class="mb-4 mt-10 h-16 flex items-center justify-center">
            Støt politisk handling
          </h3>

          <p class="mt-4">
            Støt lokale og globale initiativer, der arbejder for at reducere
            plastikforbrug og affald. Deltag i kampagner eller stem for
            politikere og love, der adresserer plastikforurening, da lovgivning
            spiller en vigtig rolle i at skabe systemiske ændringer.
          </p>
        </div>
      </div>

      <!-- Vores indsats -->
      <section class="h-screen w-100"></section>

      <!-- Merchandise -->
      <section class="h-screen w-100"></section>
    </section>
  </div>
</MainLayout>
