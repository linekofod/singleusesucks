---
import MainLayout from "../layouts/MainLayout.astro";
import "../styles/general.css";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import Banner from "../components/Banner.astro";
import { Image } from "astro:assets";
import digital_clean_up from "../assets/images/digital_clean_up.webp";
import internationalt_arbejde from "../assets/images/internationalt_arbejde.webp";
import klimaforandringer from "../assets/images/klimaforandringer.webp";
import merchandise_bg from "../assets/images/merchandise_bg.webp";
import mikroplast from "../assets/images/mikroplast.webp";
import politisk_arbejde from "../assets/images/politisk_arbejde.webp";
import skader_dyrelivet from "../assets/images/skader_dyrelivet.webp";
import skrald_strand from "../assets/images/skrald_strand.webp";
import sundhedsfare from "../assets/images/sundhedsfare.webp";
import ødelæggelse_af_levesteder from "../assets/images/ødelæggelse_af_levesteder.webp";
---

<MainLayout title="Plastic Change">
  <!-- <Image src={baggrund} alt="" /> -->
  <div
    class="flex items-center h-screen w-100 bg-cover bg-top sticky top-0"
    style="background-image: url('/src/assets/images/baggrund.webp')"
  >
    <!-- Hero unit -->
    <section class="h-screen w-100 flex items-center">
      <div class="flex flex-col items-center text-center">
      <h1 id="counter" class="!text-[#024058]">137.000.000,32</h1>
      <h2 class="!text-[#024058]">tons plastik</h2>
      <p class="!text-[#024058]">findes i øjeblikket i verdenshavene. Hvert sekund tilføjes yderligere 320 kg fra både landbaserede kilder og aktiviteter til havs. Dette udgør en af de største miljøkriser, vi står overfor.</p>
      <Button>DONÉR FOR RENERE HAVE</Button>
    </div>
    </section>
  </div>

  <div
    class="flex flex-col items-center h-full w-100 bg-cover bg-top sticky top-0"
    style="background-image: url('/src/assets/images/mellemgrund2.webp')"
  >

    <!-- Plastikforurening? -->
    <section class="h-screen w-100"></section>

    <!-- Problemet -->
    <section class="h-screen w-100"></section>

    <!-- Gør en forskel -->
    <section class="h-screen w-100">
      <Banner />
    </section>

    <!-- Vores indsats -->
    <section class="h-screen w-100"></section>

    <!-- Merchandise -->
    <section class="h-screen w-100"></section>
  </div>
</MainLayout>


  <!-- Nedtælling på hero_unit -->
<script>
  // Startværdien
  let currentCount = 137000000.32;

  // Antal kilo, der skal tilføjes per sekund
  const increment = 320;

  // Funktion til at opdatere tælleren
  function updateCounter() {
    currentCount += increment;

    // Formatér tallet med komma som tusind-separator og to decimaler
    document.getElementById("counter").innerText = currentCount.toLocaleString("da-DK", {
      minimumFractionDigits: 2,
      maximumFractionDigits: 2
    });
  }

  // Opdater tælleren hvert sekund
  setInterval(updateCounter, 1000);
</script>
</body>
</html>