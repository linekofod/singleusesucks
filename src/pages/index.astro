---
import MainLayout from "../layouts/MainLayout.astro";
import "../styles/general.css";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import Banner from "../components/Banner.astro";
import { Image } from "astro:assets";
import digital_clean_up from "../assets/images/digital_clean_up.webp";
import internationalt_arbejde from "../assets/images/internationalt_arbejde.webp";
import klimaforandringer from "../assets/images/klimaforandringer.webp";
import merchandise_bg from "../assets/images/merchandise_bg.webp";
import mikroplast from "../assets/images/mikroplast.webp";
import politisk_arbejde from "../assets/images/politisk_arbejde.webp";
import skader_dyrelivet from "../assets/images/skader_dyrelivet.webp";
import skrald_strand from "../assets/images/skrald_strand.webp";
import sundhedsfare from "../assets/images/sundhedsfare.webp";
import ødelæggelse_af_levesteder from "../assets/images/ødelæggelse_af_levesteder.webp";
import engangsplast from "../assets/images/ikoner/emballage_rød-1.png";
import genbrug from "../assets/images/ikoner/genbrug_rød.png";
import mikroplast_ikon from "../assets/images/ikoner/mikroplast_rød.png";
import politik from "../assets/images/ikoner/politik_rød.png";
---

<MainLayout title="Plastic Change">
  <!-- HERO UNIT -->
  <div
    class="flex items-center h-screen w-100 bg-cover bg-top sticky top-0"
    style="background-image: url('/src/assets/images/baggrund.webp')"
  >
    <section
      class="h-screen w-full flex flex-col items-center justify-center px-4 text-center"
    >
      <div class="flex flex-col items-center">
        <h1
          id="counter"
          class="text-[#024058] text-5xl md:text-6xl lg:text-7xl font-bold mb-6"
        >
          137.000.000,32
        </h1>
        <h2 class="text-[#024058] text-xl md:text-2xl -mt-2 mb-6">
          tons plastik
        </h2>
        <p
          class="text-[#024058] mt-4 mb-8 max-w-md md:max-w-lg lg:max-w-xl text-sm md:text-base lg:text-lg px-2"
        >
          findes i øjeblikket i verdenshavene. Hvert sekund tilføjes yderligere
          320 kg fra både landbaserede kilder og aktiviteter til havs. Dette
          udgør en af de største miljøkriser, vi står overfor.
        </p>
        <Button>DONÉR FOR RENERE HAVE</Button>
      </div>
    </section>
  </div>

  <div
    class="flex flex-col items-center h-full w-100 bg-cover bg-top sticky top-0"
    style="background-image: url('/src/assets/images/mellemgrund.webp')"
  >
    <!-- PLASTIKFORURENING? -->
    <section class="h-screen w-full flex items-center justify-center p-8">
      <!-- Wrapper-div med blå baggrund og lav opacitet -->
      <div
        class="w-full md:w-full lg:w-full bg-[#024058] bg-opacity-60 p-8 rounded-lg flex flex-col md:flex-row items-start relative"
      >
        <!-- Tekstsektion i venstre side -->
        <div class="z-10 md:w-1/2 text-left mb-8 md:mb-0">
          <h2 class="mb-1" style="text-[#f5f6f8]">Hvad er</h2>
          <h2 class="-mt-6 mb-10" style="text-[#f5f6f8]">plastikforurening?</h2>
          <p class="mb-10 leading-normal" style="text-[#f5f6f8]">
            Siden 1950’erne er der produceret over 9 milliarder ton plastik,
            hvoraf størstedelen er brugt til engangsemballager, der forurener i
            hele deres livscyklus.
          </p>
          <p class="mb-10 text-white leading-normal">
            Plastikforurening opstår, når plastmaterialer akkumuleres i miljøet
            og skader økosystemer og dyreliv, da plast sjældent nedbrydes og
            ofte ender i havet eller på lossepladser. Uden handling forventes
            plastikproduktionen at fordobles, og forureningen at firedobles de
            næste 20 år. For at beskytte vores miljø er det derfor afgørende at
            reducere brugen af engangsplastik.
          </p>
        </div>

        <!-- Diagramsektion i højre side -->
        <div
          id="my-chart"
          class="z-10 md:w-1/2 flex flex-col items-center hidden"
        >
          <div class="w-3/4 max-w-lg mx-auto">
            <div class="flex justify-between items-end h-64 pb-4 gap-4 mb-52">
              <!-- Søjle 1 -->
              <div class="flex flex-col items-center w-1/6 -mb-48">
                <!-- Cirkel med billede -->
                <div
                  class="w-12 h-12 mb-2 ml-20 rounded-full bg-[#C4DDF2] flex items-center justify-center overflow-hidden"
                >
                  <Image
                    class="w-6 h-8"
                    src={engangsplast}
                    alt="Bygningskonstruktioner ikon"
                  />
                </div>

                <!-- Procenttallet -->
                <div class="font-semibold ml-20 text-center mb-1 text-white">
                  3.3%
                </div>

                <!-- Søjlen og tekst -->
                <div class="flex items-center">
                  <p class="-rotate-90 text-smm -mr-6 mt-1">Landbrug</p>
                  <!-- Angiv en fast højde på søjlen -->
                  <div
                    class="bg-[#C4DDF2] text-center rounded-md -mr-10 mt-10"
                    style="height: 40px; width: 50px;"
                    style="text-[#f5f6f8]"
                  >
                  </div>
                </div>
              </div>

              <!-- Søjle 2 -->
              <div class="flex flex-col items-center w-1/6 -mb-48">
                <!-- Cirkel med billede -->
                <div
                  class="w-12 h-12 mb-2 ml-20 rounded-full bg-[#C4DDF2] flex items-center justify-center overflow-hidden"
                >
                  <Image
                    class="w-6 h-8"
                    src={engangsplast}
                    alt="Bygningskonstruktioner ikon"
                  />
                </div>

                <!-- Procenttallet -->
                <div class="font-semibold text-center ml-20 mb-1 text-white">
                  5.8%
                </div>

                <!-- Søjlen og tekst -->
                <div class="flex items-center">
                  <p class="-rotate-90 text-sm -mb-2 -mr-6 mt-10">Elektronik</p>
                  <!-- Angiv en fast højde på søjlen -->
                  <div
                    class="bg-[#C4DDF2] text-center rounded-md -mr-12 mt-10"
                    style="height: 90px; width: 50px; text-[#f5f6f8]"
                  >
                  </div>
                </div>
              </div>

              <!-- Søjle 3 -->
              <div class="flex flex-col items-center w-1/6 -mb-48">
                <!-- Cirkel med billede -->
                <div
                  class="w-12 h-12 mb-2 ml-14 rounded-full bg-[#C4DDF2] flex items-center justify-center overflow-hidden"
                >
                  <Image
                    class="w-6 h-8"
                    src={engangsplast}
                    alt="Bygningskonstruktioner ikon"
                  />
                </div>

                <!-- Procenttallet -->
                <div class="ml-14 text-center mb-1 font-semibold text-white">
                  8.9%
                </div>

                <!-- Søjlen og tekst -->
                <div class="flex items-center ml-20">
                  <p class="-rotate-90 text-s -mr-2 mt-32">Biler</p>
                  <!-- Angiv en fast højde på søjlen -->
                  <div
                    class="bg-[#C4DDF2] text-center rounded-md mr-12 mt-10"
                    style="height: 130px; width: 50px; text-[#f5f6f8]"
                  >
                  </div>
                </div>
              </div>

              <!-- Søjle 4 -->
              <div class="flex flex-col items-center w-1/6 -mb-48">
                <!-- Cirkel med billede -->
                <div
                  class="w-12 h-12 mb-2 ml-8 rounded-full bg-[#C4DDF2] flex items-center justify-center overflow-hidden"
                >
                  <Image
                    class="w-6 h-8"
                    src={engangsplast}
                    alt="Bygningskonstruktioner ikon"
                  />
                </div>

                <!-- Procenttallet -->
                <div
                  class="text-center ml-8 mt-1 mb-0 font-semibold text-white"
                >
                  19.7%
                </div>

                <!-- Søjlen og tekst -->
                <div class="flex items-center ml-10">
                  <p class="-rotate-90 text-sm -mr-20 mt-10">
                    Bygningskonstruktioner
                  </p>
                  <!-- Angiv en fast højde på søjlen -->
                  <div
                    class="bg-[#C4DDF2] text-center rounded-md mr-24 mt-10"
                    style="height: 190px; width: 50px; text-[#f5f6f8]"
                  >
                  </div>
                </div>
              </div>

              <!-- Søjle 5 -->
              <div class="flex flex-col items-center w-1/6 -mb-48">
                <!-- Cirkel med billede -->
                <div
                  class="w-12 h-12 mb-2 ml-6 rounded-full bg-[#C4DDF2] flex items-center justify-center overflow-hidden"
                >
                  <Image
                    class="w-6 h-8"
                    src={engangsplast}
                    alt="Bygningskonstruktioner ikon"
                  />
                </div>

                <!-- Procenttallet -->
                <div class="text-center ml-6 mb-1 font-semibold text-white">
                  22.4%
                </div>

                <!-- Søjlen og tekst -->
                <div class="flex items-center">
                  <p class="-rotate-90 text-sm ml-10 mt-60">Hus</p>
                  <!-- Angiv en fast højde på søjlen -->
                  <div
                    class="bg-[#C4DDF2] text-center rounded-md mr-10 mt-10"
                    style="height: 240px; width: 50px; text-[#f5f6f8]"
                  >
                  </div>
                </div>
              </div>

              <!-- Søjle 6 -->
              <div class="flex flex-col items-center w-1/6 mt-28 -mb-48">
                <!-- Cirkel med billede -->
                <div
                  class="w-12 h-12 mb-0 rounded-full mr-4 bg-[#C4DDF2] flex items-center justify-center overflow-hidden"
                >
                  <Image
                    class="w-6 h-8"
                    src={engangsplast}
                    alt="Bygningskonstruktioner ikon"
                  />
                </div>

                <!-- Procenttallet -->
                <div class="text-center mr-4 mt-2 font-semibold text-white">
                  39.9%
                </div>

                <!-- Søjlen og tekst -->
                <div class="flex items-center">
                  <p class="-rotate-90 text-sm -mr-16 mt-48">
                    Engangsemballage
                  </p>
                  <!-- Angiv en fast højde på søjlen -->
                  <div
                    class="bg-[#C4DDF2] text-center rounded-md mr-24 mt-10"
                    style="height: 310px; width: 50px; text-[#f5f6f8]"
                  >
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Tekst under diagrammet -->
          <h3 class="text-white text-center mt-6 ml-20">
            Sådan fordeler plastikforureningen sig
          </h3>
        </div>
      </div>
    </section>

    <!-- PROBLEMET -->
    <section id="problemet" class="h-fit w-100"></section>

    <!-- GØR EN FORSKEL -->
    <section id="gør-en-forskel" class="h-fit w-full mb-36">
      <Banner />
      <div class="flex justify-center items-center mt-16 mb-4">
        <h2 class="">Hvordan kan du gøre en forskel?</h2>
      </div>

      <div
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 px-8 pt-16"
      >
        <!-- Engangsplast -->
        <div class="flex flex-col items-center p-6 text-center">
          <Image src={engangsplast} alt="kop" />
          <h3 class="mb-4 mt-10 h-16 flex items-center justify-center">
            Undgå engangsplast
          </h3>
          <p class="mt-4">
            Skift plastposer ud med stofposer og brug genanvendelige
            vandflasker, kaffekopper og madpakker. Engangsplast står for en stor
            del af plastikforureningen, da det kun bruges kortvarigt, men har en
            langvarig miljøpåvirkning.
          </p>
        </div>

        <!-- Sorter genbrug -->
        <div class="flex flex-col items-center p-6 text-center">
          <Image src={genbrug} alt="kop" />
          <h3 class="mb-4 mt-10 h-16 flex items-center justify-center">
            Sortér genbrug
          </h3>
          <p class="mt-4">
            Ved at sortere dit affald korrekt sikrer du, at plast kan
            genanvendes, og du mindsker mængden af plast, der ender i naturen
            eller på lossepladser. Støt også systemer, der fremmer genbrug.
          </p>
        </div>

        <!-- Begræns mikroplastik -->
        <div class="flex flex-col items-center p-6 text-center">
          <Image src={mikroplast_ikon} alt="kop" />
          <h3 class="mb-4 mt-10 h-16 flex items-center justify-center">
            Begræns mikroplastik
          </h3>
          <p class="mt-4">
            Vælg kosmetik- og plejeprodukter uden mikroplast, da disse små
            plastpartikler let ender i vores vandsystemer. Brug vaskeposer, som
            kan reducere spild af mikroplast fra syntetisk tøj, der frigøres
            under vask.
          </p>
        </div>

        <!-- Støt politisk handling -->
        <div class="flex flex-col items-center p-6 text-center">
          <Image src={politik} alt="kop" />

          <h3 class="mb-4 mt-10 h-16 flex items-center justify-center">
            Støt politisk handling
          </h3>

          <p class="mt-4">
            Støt lokale og globale initiativer, der arbejder for at reducere
            plastikforbrug og affald. Deltag i kampagner eller stem for
            politikere og love, der adresserer plastikforurening, da lovgivning
            spiller en vigtig rolle i at skabe systemiske ændringer.
          </p>
        </div>
      </div>
    </section>

    <!-- VORES INDSATS -->
    <section class="h-fit w-100 mb-36">
      <h2 class="mx-3 mb-2">Vores indsats</h2>
      <div class="md:grid grid-cols-2 xl:grid-cols-4">
        <div class="relative group">
          <Image
            class="aspect-[4/5] xl:aspect-[4/7] object-cover object-[-340px] opacity-20 xl:opacity-100 group-hover:opacity-20 transition-opacity duration-300"
            src={politisk_arbejde}
            alt=""
          />
          <div
            class="absolute bottom-0 p-8 xl:p-4 xl:opacity-0 group-hover:opacity-100 transition-opacity duration-300"
          >
            <h3>Politisk arbejde</h3>
            <div class="flex flex-col gap-4">
              <p>
                En stor prioritet i Plastic Changes arbejde er at påvirke
                beslutningstagere i Danmark, EU og internationalt i retning af
                en mere ambitiøs og effektiv lovgivning mod plastikforurening.
              </p>
              <p>
                Initiativer løftet af frivillige, miljøorganisationer og
                erhvervsliv kan bære os langt, men vi når ikke i mål, uden at de
                politiske rammevilkår og reguleringen er på plads.
              </p>
            </div>
          </div>
        </div>
        <div class="relative group">
          <Image
            class="aspect-[4/5] xl:aspect-[4/7] object-cover object-[-340px] opacity-20 xl:opacity-100 group-hover:opacity-20 transition-opacity duration-300"
            src={internationalt_arbejde}
            alt=""
          />
          <div
            class="absolute bottom-0 p-8 xl:p-4 xl:opacity-0 group-hover:opacity-100 transition-opacity duration-300"
          >
            <h3>World Cleanup Day</h3>
            <div class="flex flex-col gap-4">
              <p>
                Sidste år deltog flere end 15 millioner mennesker fra 190 lande,
                hvilket gjorde dagen til verdens største civile begivenhed. Det
                bliver simpelthen ikke større.
              </p>
              <p>
                Tilsammen blev der samlet minimum 60.000 tons affald. I Danmark
                bliver det 6. år, at verdens største civile aktion finder sted,
                og selvfølgelig skal det finde sted tværs over hele landet
              </p>
            </div>
          </div>
        </div>
        <div class="relative group">
          <Image
            class="aspect-[4/5] xl:aspect-[4/7] object-cover object-[-340px] opacity-20 xl:opacity-100 group-hover:opacity-20 transition-opacity duration-300"
            src={digital_clean_up}
            alt=""
          />
          <div
            class="absolute bottom-0 p-8 xl:p-4 xl:opacity-0 group-hover:opacity-100 transition-opacity duration-300"
          >
            <h3>Digital Cleanup Day</h3>
            <div class="flex flex-col gap-4">
              <p>
                Digital Cleanup Day er en dag dedikeret til at rydde op i vores
                digitale liv, ligesom World Cleanup Day gør for det fysiske
                miljø.
              </p>
              <p>
                Arrangeret af Let's Do It World, har dagen til formål at øge
                bevidstheden om digital forurening og opfordre til oprydning
                online.
              </p>
            </div>
          </div>
        </div>
        <div class="relative group">
          <Image
            class="aspect-[4/5] xl:aspect-[4/7] object-cover object-[-340px] opacity-20 xl:opacity-100 group-hover:opacity-20 transition-opacity duration-300"
            src={skrald_strand}
            alt=""
          />
          <div
            class="absolute bottom-0 p-8 xl:p-4 xl:opacity-0 group-hover:opacity-100 transition-opacity duration-300"
          >
            <h3>Internationalt arbejde</h3>
            <div class="flex flex-col gap-4">
              <p>
                I Plastic Change arbejder vi ikke kun med plastikforurening
                herhjemme i Danmark, men vi er også med til at rykke
                plastiklandskabet på et internationalt niveau. Plastikforurening
                holder sig ikke indenfor landegrænser, og derfor skal
                løsningerne findes på tværs af lande.
              </p>
              <p>
                Vi tror på, at problemerne med plastikspild i verden ikke kan
                løses ved kun at arbejde på nationalt niveau. Vi er nødt til at
                arbejde på tværs af alle verdens lande og sammen influere de
                højeste politiske instanser om en grønnere omstilling med mindre
                engangsplastik og mere genbrug.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- DONÉR -->
    <section
      class="h-fit w-100 mx-10 mb-36 md:grid grid-cols-[1fr_1fr] gap-10 flex flex-col"
    >
      <div class="flex flex-col gap-4">
        <h2>Giv dit bidrag</h2>
        <div class="flex flex-col gap-5">
          <p>
            Kun med din støtte kan vi kæmpe for, at politikere og virksomheder
            tager ansvar for at standse overproduktion og forurening fra plastik
            nu og at vi kan uddanne fremtidens forbrugere. Du bliver en del af
            en global Plastic Changer bevægelse, der siger:
          </p>
          <p>STOP PLASTIKFORURENING NU!</p>
        </div>
      </div>
      <div
        class="flex flex-col lg:flex-row gap-6"
        x-data="{ showmedlem: false }"
      >
        <!-- Støt her -->
        <div class="bg-[#c4ddf2] w-fit h-fit p-10 pt-6 md:p-14 md:pt-8">
          <h3 class="!text-[#024058] mb-6">Støt her</h3>
          <form class="flex flex-col gap-7">
            <div class="flex items-center gap-6">
              <div class="flex items-center gap-2">
                <input
                  type="radio"
                  name="betaling"
                  id="månedligt"
                  class="w-5 h-5 text-[#024058] bg-[#f5f6f8] border-0 focus:ring-0"
                />
                <label for="månedligt">Månedligt</label>
              </div>
              <div class="flex items-center gap-2">
                <input
                  type="radio"
                  name="betaling"
                  id="en_gang"
                  class="w-5 h-5 text-[#024058] bg-[#f5f6f8] border-0 focus:ring-0"
                />
                <label for="en_gang">Én gang</label>
              </div>
            </div>

            <div class="flex items-center gap-6">
              <div class="flex items-center gap-2 relative">
                <input
                  type="radio"
                  name="kroner"
                  id="50"
                  class="w-16 h-16 text-[#024058] bg-[#f5f6f8] border-0 focus:ring-0"
                />
                <label
                  for="50"
                  class="absolute inset-0 flex items-center justify-center"
                  >50</label
                >
              </div>
              <div class="flex items-center gap-2 relative">
                <input
                  type="radio"
                  name="kroner"
                  id="75"
                  class="w-16 h-16 text-[#024058] bg-[#f5f6f8] border-0 focus:ring-0"
                />
                <label
                  for="75"
                  class="absolute inset-0 flex items-center justify-center"
                  >75</label
                >
              </div>
              <div class="flex items-center gap-2 relative">
                <input
                  type="radio"
                  name="kroner"
                  id="125"
                  class="w-16 h-16 text-[#024058] bg-[#f5f6f8] border-0 focus:ring-0"
                />
                <label
                  for="125"
                  class="absolute inset-0 flex items-center justify-center"
                  >125</label
                >
              </div>
            </div>

            <div class="flex flex-col gap-1">
              <label for="beløb"><strong>Andet beløb:</strong></label>
              <input
                type="text"
                name="beløb"
                id="beløb"
                class="rounded bg-[#f5f6f8] border-0"
              />
            </div>

            <div class="flex items-center gap-2">
              <input
                type="checkbox"
                name="checkbox"
                id="checkbox"
                class="rounded-full w-5 h-5 text-[#024058] bg-[#f5f6f8] border-0 focus:ring-0"
                x-on:click="showmedlem = ! showmedlem"
              />
              <label for="checkbox">Bliv medlem og støt årligt</label>
            </div>

            <div class="mt-6">
              <Button>Donér</Button>
            </div>
          </form>
        </div>

        <!-- Bliv medlem -->
        <div
          class="medlem bg-[#c4ddf2] w-fit h-fit p-10 pt-6 md:p-14 md:pt-8 transition-opacity duration-300"
          x-transition
          x-bind:class="showmedlem ? 'opacity-100 pointer-events-auto' : 'opacity-30 pointer-events-none'"
        >
          <h3 class="!text-[#024058] mb-6">Bliv medlem</h3>
          <form class="flex flex-col gap-7">
            <div class="flex flex-col gap-3">
              <label for="mobilepay"><strong>Betalingsform*</strong></label>
              <div class="flex items-center gap-2">
                <input
                  type="radio"
                  name="betaling"
                  id="mobilepay"
                  class="w-5 h-5 text-[#024058] bg-[#f5f6f8] border-0 focus:ring-0"
                />
                <label for="mobilepay">Mobilepay</label>
              </div>
              <div class="flex items-center gap-2">
                <input
                  type="radio"
                  name="betaling"
                  id="betalingskort"
                  class="w-5 h-5 text-[#024058] bg-[#f5f6f8] border-0 focus:ring-0"
                />
                <label for="betalingskort">Betalingskort</label>
              </div>
            </div>

            <p class="!text-[#024058]">350 kr. / årligt</p>

            <div class="flex flex-col gap-4">
              <div class="flex flex-col gap-1">
                <label for="fornavn"><strong>Fornavn*</strong></label>
                <input
                  type="text"
                  name="fornavn"
                  id="fornavn"
                  class="rounded w-60 bg-[#f5f6f8] border-0"
                />
              </div>

              <div class="flex flex-col gap-1">
                <label for="efternavn"><strong>Efternavn*</strong></label>
                <input
                  type="text"
                  name="efternavn"
                  id="efternavn"
                  class="rounded w-60 bg-[#f5f6f8] border-0"
                />
