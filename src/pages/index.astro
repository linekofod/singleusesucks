<script>
  import { scroll, animate, inView } from "motion";

  /* Nedtælling på hero_unit */
  // Startværdien
  let currentCount = 137000000.32;

  // Antal kilo, der skal tilføjes per sekund
  const increment = 320;

  // Funktion til at opdatere tælleren
  function updateCounter() {
    currentCount += increment;

    // Formatér tallet med komma som tusind-separator og to decimaler
    document.getElementById("counter").innerText = currentCount.toLocaleString(
      "da-DK",
      {
        minimumFractionDigits: 2,
        maximumFractionDigits: 2,
      }
    );
  }

  // Opdater tælleren hvert sekund
  setInterval(updateCounter, 1000);

  /* Horisontal scroll sektion */
  scroll(
    animate("#horisontalliste", {
      transform: ["none", "translateX(-500vw)"],
    }),
    { target: document.querySelector("#horisontalscrollsection") }
  );
</script>
